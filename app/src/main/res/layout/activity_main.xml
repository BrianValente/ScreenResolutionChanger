<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<include
        layout="@layout/toolbar" />-->
    <!--<android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:title="@string/app_name">

    </android.support.v7.widget.Toolbar>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_full_linebreak"
            android:textColor="#ffffff"
            android:textSize="34sp"
            android:layout_marginLeft="14dp"
            android:lineSpacingExtra="4sp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/content"
        android:layout_marginBottom="56dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:id="@+id/resolutionsLayout">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:id="@+id/resolutionsRV" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:visibility="gone">

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="104dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:clipToPadding="false">
        <com.brianvalente.screenresolutionchanger.widget.FloatingActionButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:fab_color="@color/colorAccent"
            app:fab_icon="@drawable/ic_fab_settings"
            android:layout_centerInParent="true"
            android:id="@+id/fab_settings"
            android:elevation="8dp"/>
    </RelativeLayout>
    <com.brianvalente.screenresolutionchanger.widget.BottomNavigationBar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/bnb"
        android:layout_alignParentBottom="true"
        android:background="@color/colorNavigationBar"
        app:bnb_defaultItem="@+id/bnb_resolutions">
        <com.brianvalente.screenresolutionchanger.widget.BottomNavigationBarItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bnb_resolutions"
            app:bnbi_title="@string/resolution"
            app:bnbi_icon="@drawable/bnb_ic_resolution"/>
        <com.brianvalente.screenresolutionchanger.widget.BottomNavigationBarItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bnb_dpi"
            app:bnbi_title="@string/dpi"
            app:bnbi_icon="@drawable/bnb_ic_dpi"/>
    </com.brianvalente.screenresolutionchanger.widget.BottomNavigationBar>
</RelativeLayout>